ctrl + alt - return : yabai -m window --toggle float --grid 1:4:1:1:2:1 #center
ctrl + alt + rshift - return : yabai -m window --toggle float --grid 1:1:1:1:1:1 #full display
ctrl + alt - right : yabai -m window --toggle float --grid 1:2:1:1:1:1 #half right
ctrl + alt - left : yabai -m window --toggle float --grid 1:2:0:1:1:1 #half left
ctrl + alt - up : yabai -m window --toggle float --grid 2:1:1:0:1:1 #half up
ctrl + alt - down : yabai -m window --toggle float --grid 2:1:1:1:1:1 #half down

